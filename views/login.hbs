<div class="jumbotron starshard-header">
  <div class="container align-center">
    <h1>Login</h1>
    <p>Login to your starshard account.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <form id="user_login" class="col-md-6 col-md-offset-3">
      <div class="cbg form-horizontal starshard-login-form">
        {{#parse '{"id": "username", "label": "Username", "horizontal": true}'}}
          {{> form_group }}
        {{/parse}}

        {{#parse '{"id": "password", "type": "password", "label": "Password", "horizontal": true}'}}
          {{> form_group }}
        {{/parse}}
        <div class="form-group">
          <div class="col-md-9 col-md-offset-3">
            <button type="submit" href="#" class="btn btn-primary starshard-login">Login</button>
            <a href="/register" class="btn btn-default">Register</a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/application/starshard-login{{#if production}}.min{{/if}}.js"></script>